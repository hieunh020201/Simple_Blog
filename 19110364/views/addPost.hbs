

<div class="ml-4 mt-4" style="width: 600px">
    <span class="text-success">{{message_success}}</span>
    <form action="/create" method="POST">
        <div class="form-group">
            <label for="title">Tite Post</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Enter title" required>
            <span class="text-danger">{{message_error}}</span>
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea class="form-control" name="content" id="content" rows="5" cols="20"
                placeholder="Enter content" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <a href="/">Go Back Home</a>
</div>
<script>
    function back_page() {
        window.location = "http://localhost:5000/";
    }
</script>